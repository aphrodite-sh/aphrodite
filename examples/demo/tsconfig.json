{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "esnext",
    "jsx": "react",
    "target": "esnext",
    "allowJs": true,
    "checkJs": false,
    "importHelpers": true,
    "baseUrl": ".",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./src/@types"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "incremental": true,
    "composite": true
  },
  "include": ["./src/"]
}
