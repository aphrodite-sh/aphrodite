{
  "name": "@aphro/integration-tests-ts",
  "private": true,
  "version": "0.4.1",
  "main": "lib/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/tantaman/aphrodite.git",
    "directory": "packages/integration-tests-ts"
  },
  "dependencies": {
    "@aphro/runtime-ts": "workspace:*",
    "@aphro/sqlite3-connector": "workspace:*",
    "@strut/utils": "^0.1.1"
  },
  "devDependencies": {
    "@aphro/codegen-cli": "workspace:*",
    "@babel/core": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@jest/globals": "^28.1.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.31",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.1",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "clean": "tsc --build --clean",
    "build": "tsc --build",
    "watch": "tsc --build -w",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "aphro": "aphro gen src/schema/domain.aphro -d src/generated && aphro gen src/schema/in-memory.aphro -d src/generated-memory",
    "copy": "cp src/generated/generated/*.sql lib/generated/generated",
    "deep-clean": "rm -rf ./lib || true && rm tsconfig.tsbuildinfo || true"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
